<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= form_for(@studysubject, :url => studysubjects_update_path, :method => 'patch', :remote => true, :html => {id:'studysubject-enrollmentstatus-form'}) do |f| %>
      <%= f.label :EnrollmentStatus, @study.Name %>&nbsp;&nbsp;
      <%= f.select :EnrollmentStatus, options_for_select(@studysubject.enrollment_status_list, selected: @studysubject.EnrollmentStatus), {include_blank: false}, onchange: "$('#studysubject-enrollmentstatus-form').submit();" %>
      <%= f.hidden_field :StudySubjectID, :value => @studysubject.StudySubjectID %>
    <% end %>
  </div>
</div>
